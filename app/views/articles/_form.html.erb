<div class="container">
  <%if @article.errors.any?%>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
      <%@article.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
      <%end%>
    </ul>
  <%end%>

  <%= form_with model: @article, data: { turbo: false }, local: true  do |f| %>
    
    <div class="row justify-content-center">
    <div class="col-10">
    <div class="form-group row">
      <%=f.label :title, class: "col-2 col-form-label"%>
      <div class="col-10">
        <%=f.text_field :title, class: "form-control shadow p-2 mb-4 bg-body-tertiary rounded"%>
      </div>
    </div>

    <div class="form-group row">
      <%=f.label :description, class: "col-2 col-form-label"%>
      <div class="col-10">
        <%=f.text_area :description, rows: 10, class: "form-control shadow p-3 mb-5 bg-body-tertiary rounded"%>
      </div>
    </div>

    <div class="form-group" align="center">
      <%=f.submit class: "btn btn-outline-secondary"%>
      <br>
      <br>
      <%= link_to '[ Cancel and return to article list ]', articles_path%>
    </div>
  <% end %>
  </div>
</div>
</div>
