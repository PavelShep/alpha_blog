<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with model: @user, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded", local: true  do |f| %>
        <div class="form-group row">
          <%=f.label :username, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%=f.text_field :username, class: "form-control shadow p-2 mb-4 bg-body-tertiary rounded", placeholder: "Enter username"%>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :email, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%=f.email_field :email, rows: 10, class: "form-control shadow p-3 mb-5 bg-body-tertiary rounded", placeholder: "Enter your email address"%>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :password, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%=f.password_field :password, rows: 10, class: "form-control shadow p-3 mb-5 bg-body-tertiary rounded", placeholder: "Enter your password"%>
          </div>
        </div>

        <div class="form-group" align="center">
          <%=f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-secondary") %>
          <br>
          <br>
          <%= link_to '[ Cancel and return to article list ]', articles_path%>
        </div>
      <% end %>
    </div>
  </div>
</div>
